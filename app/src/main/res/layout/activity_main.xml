<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#222222">

    <!-- 오른쪽 위에 작게 표시되는 이전 계산식 -->
    <TextView
        android:id="@+id/txtPreview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:textColor="#AAAAAA"
        android:gravity="end"
        android:paddingBottom="4dp"/>

    <!-- 입력/수식 칸 -->
    <EditText
        android:id="@+id/edtFormula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="0"
        android:inputType="none"
        android:focusable="false"
        android:textSize="32sp"
        android:textColor="#FFFFFF"
        android:background="#333333"
        android:padding="16dp"
        android:layout_marginBottom="16dp" />

    <!-- 버튼 그리드 -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:columnCount="4"
        android:rowCount="5"
        android:alignmentMode="alignMargins"
        android:rowOrderPreserved="false"
        android:useDefaultMargins="true">

        <!-- 1행 -->
        <Button android:id="@+id/btnClear" android:text="C" android:textColor="#FF4444" android:backgroundTint="#444444" />
        <Button android:id="@+id/btnParen" android:text="()" android:textColor="#66FF66" android:backgroundTint="#444444" />
        <Button android:id="@+id/btnPercent" android:text="%" android:textColor="#66FF66" android:backgroundTint="#444444" />
        <Button android:id="@+id/btnDiv" android:text="÷" android:textColor="#FFFFFF" android:backgroundTint="#FF6666" />

        <!-- 2행 -->
        <Button android:id="@+id/btn7" android:text="7" android:textColor="#FFFFFF" android:backgroundTint="#333333" />
        <Button android:id="@+id/btn8" android:text="8" android:textColor="#FFFFFF" android:backgroundTint="#333333" />
        <Button android:id="@+id/btn9" android:text="9" android:textColor="#FFFFFF" android:backgroundTint="#333333" />
        <Button android:id="@+id/btnMul" android:text="×" android:textColor="#FFFFFF" android:backgroundTint="#FF6666" />

        <!-- 3행 -->
        <Button android:id="@+id/btn4" android:text="4" android:textColor="#FFFFFF" android:backgroundTint="#333333" />
        <Button android:id="@+id/btn5" android:text="5" android:textColor="#FFFFFF" android:backgroundTint="#333333" />
        <Button android:id="@+id/btn6" android:text="6" android:textColor="#FFFFFF" android:backgroundTint="#333333" />
        <Button android:id="@+id/btnSub" android:text="-" android:textColor="#FFFFFF" android:backgroundTint="#FF6666" />

        <!-- 4행 -->
        <Button android:id="@+id/btn1" android:text="1" android:textColor="#FFFFFF" android:backgroundTint="#333333" />
        <Button android:id="@+id/btn2" android:text="2" android:textColor="#FFFFFF" android:backgroundTint="#333333" />
        <Button android:id="@+id/btn3" android:text="3" android:textColor="#FFFFFF" android:backgroundTint="#333333" />
        <Button android:id="@+id/btnAdd" android:text="+" android:textColor="#FFFFFF" android:backgroundTint="#FF6666" />

        <!-- 5행 -->
        <Button android:id="@+id/btnSign" android:text="+/-" android:textColor="#66FF66" android:backgroundTint="#444444" />
        <Button android:id="@+id/btn0" android:text="0" android:textColor="#FFFFFF" android:backgroundTint="#333333" />
        <Button android:id="@+id/btnDot" android:text="." android:textColor="#FFFFFF" android:backgroundTint="#333333" />
        <Button android:id="@+id/btnEqual" android:text="=" android:textColor="#FFFFFF" android:backgroundTint="#44DD44" />
    </GridLayout>

    <!-- 계산 결과 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <TextView
            android:text="계산 결과: "
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="20sp"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- 결과 히스토리 -->
    <LinearLayout
        android:id="@+id/historyLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="16dp" />

</LinearLayout>
